/* flex 两侧分布 */
.flex-space-between {
  display: flex;
  justify-content: space-between;
}
/* 超出文本省略号 */
.overflow-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* padding-top: 1PX; */
}
/*
 * 清除浮动
 */
.mix-clearfix:before,
.mix-clearfix:after {
  content: "";
  display: table;
  clear: both;
}
/* 垂直居中 */
.mix-flex-y-center {
  display: flex;
  align-items: center;
}
/* 水平居中 */
.mix-flex-x-center {
  display: flex;
  justify-content: center;
}
/* 水平垂直居中 */
.mix-flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 超出部分出省略号 */
.mix-text-overflow {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
/* 多行文本超出部分省略号 */
.ellipsis-line-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  box-orient: vertical;
}
