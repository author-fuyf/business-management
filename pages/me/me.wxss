page {
  height: calc(100% - 10px);
  padding-top: 10px;
}
page .me {
  height: 100%;
  font-size: 14px;
  background: white !important;
}
page .me .top-show {
  width: 95%;
  margin: 0 auto;
  height: 180px;
  padding-bottom: 10px;
}
page .me .top-show image {
  width: 100%;
  height: 100%;
}
page .me .content-container {
  width: 95%;
  margin: 0 auto;
  height: calc(100% - 190px);
  overflow-y: auto;
}
page .me .content-container .list-item {
  padding: 10px 0;
}
page .me .content-container .list-item .item-icon-promote {
  font-size: 14px;
  color: #0B93DA;
}
page .me .content-container .list-item .item-icon {
  font-size: 26px;
  color: #0B93DA;
}
page .me .content-container .list-item .title {
  margin-left: 10px;
}
