page {
  height: calc(100% - 10px);
  padding-top: 10px;
}
page .production-information {
  height: 100%;
  font-size: 14px;
  background: white !important;
}
page .production-information .container {
  height: 100%;
}
page .production-information .container .page-body {
  height: 100%;
}
page .production-information .container .page-body .swiper {
  width: 95%;
  margin: 0 auto;
}
page .production-information .container .page-body .swiper swiper {
  height: 180px;
}
page .production-information .container .page-body .swiper swiper .swiper-item {
  height: 100%;
}
page .production-information .container .page-body .swiper swiper .demo-text-1 {
  background-color: #1AAD19;
}
page .production-information .container .page-body .swiper swiper .demo-text-2 {
  background-color: #2782D7;
}
page .production-information .container .page-body .swiper swiper .demo-text-3 {
  background-color: #F1F1F1;
}
page .production-information .container .page-body .content-container {
  width: 95%;
  margin: 0 auto;
  height: calc(100% - 200px);
  overflow-y: auto;
}
page .production-information .container .page-body .content-container .info-list .info-item {
  padding: 5px 0;
  display: flex;
  justify-content: flex-start;
}
page .production-information .container .page-body .content-container .info-list .info-item .label {
  width: 25%;
}
page .production-information .container .page-body .content-container .info-list .info-item .right-content {
  width: 70%;
  margin-left: 5%;
  color: #7F7F7F;
}
page .production-information .container .page-body .content-container .info-list .company-present {
  font-size: 12px;
  color: #7F7F7F;
}
